apiVersion: apps/v1
kind: Deployment
metadata:
  name: cloudmart-backend
  labels:
    app: cloudmart-backend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cloudmart-backend
  template:
    metadata:
      labels:
        app: cloudmart-backend
    spec:
      serviceAccountName: cloudmart-pod-execution-role
      containers:
      - name: cloudmart-backend
        image: {{ aws_account_id }}.dkr.ecr.{{ aws_region | default('us-east-1') }}.amazonaws.com/cloudmart-backend:latest
        ports:
        - containerPort: 5000
        resources:
          requests:
            memory: "256Mi"
            cpu: "200m"
          limits:
            memory: "512Mi"
            cpu: "500m"
        env:
        - name: PORT
          value: "5000"
        - name: AWS_REGION
          value: "{{ aws_region }}"
        - name: AWS_STS_REGIONAL_ENDPOINTS
          value: "regional"
        - name: AWS_ROLE_ARN
          value: "arn:aws:iam::{{ lookup('env', 'AWS_ACCOUNT_ID') | default('445567090747') }}:role/CloudMartPodExecutionRole"
        - name: AWS_WEB_IDENTITY_TOKEN_FILE
          value: "/var/run/secrets/eks.amazonaws.com/serviceaccount/token"
        volumeMounts:
        - name: aws-iam-token
          mountPath: /var/run/secrets/eks.amazonaws.com/serviceaccount
          readOnly: true
      volumes:
      - name: aws-iam-token
        projected:
          sources:
          - serviceAccountToken:
              path: token
              expirationSeconds: 86400
---
apiVersion: v1
kind: Service
metadata:
  name: cloudmart-backend-service
spec:
  selector:
    app: cloudmart-backend
  ports:
  - port: 80
    targetPort: 5000
  type: LoadBalancer
